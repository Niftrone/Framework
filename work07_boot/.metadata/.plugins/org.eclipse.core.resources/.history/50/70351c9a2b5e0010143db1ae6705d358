	@GetMapping("/index")
	public String doIndex(HttpServletRequest request) {
		System.out.println("doIndex....");
		request.setAttribute("message", "Hello SpringBoot");
		return "result";
	}
	
	@GetMapping("/home")
	public ModelAndView getHome() {
		System.out.println("IndexController 진입 getHome 호출됨");
	}
}
